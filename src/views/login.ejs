<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-5">
      <h1 class=" text-center">Login</h1>
      <p class="text-center lead">Faça sua conta</p>

     <div class="row">
       <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Cria uma conta caso não tenha ainda</p>
          <form action="/login/register" method="POST" >
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="mb-3">
              <label >E-mail</label>
              <input type="email" class="form-control" name="email">
            </div>

            <div class="mb-3">
              <label >Digita a senha</label>
              <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-primary">Mandar</button>
          </form>
       </div>
   
      <div class="col-lg">
         <h4>Entrar no sistema</h4>
         <p>Entre no sistema</p>
          <form action="/login/login" method="POST" >
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="mb-3">
              <label >E-mail</label>
              <input type="email" class="form-control" name="email">
            </div>

            <div class="mb-3">
              <label >Digita a senha</label>
              <input type="password" class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-primary">Mandar</button>
          </form>
      </div>
    </div>

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer.ejs') %>